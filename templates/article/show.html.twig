{% extends 'base.html.twig' %} 
{% block title %}<title>Liste article</title>{% endblock %} 
{% block body %}
{{parent()}}
<div class="container">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-around flex-wrap">
      {# boucle sur le tableau $articles du controller#}
      {% if app.user %}
      {% for key, item in articles %}
      <div class="card" style="width: 450px; margin-top: 50px">
        <div class="card-header">
          Créé le {{ item.getDate|date("d/m/Y") }}
        </div>
        <div class="card-body">
          <h5 class="card-title">{{ item.getTitre }}</h5>
          <p class="card-text">{{ item.getContenu }}</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      {% endfor %}
      {% endif %}
      {% if not app.user %}
      Bienvenue, veuillez vous identifier
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
